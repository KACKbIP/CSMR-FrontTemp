@{
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/CSS/login.css" />
<body>
    <center>
        <div class="alert alert-primary col-3" style="margin-top:20%;border:5px solid black;">

                <h2 class="form-title">Вход</h2>
                <h5 style="color:red">@ViewBag.Validate</h5>
                <form method="POST" class="register-form" id="login-form">
                    <div class="form-group">
                        <label for="login"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input type="text" name="login" id="login" placeholder="Логин" />
                    </div>
                    <div class="form-group">
                        <label for="password"><i class="zmdi zmdi-lock"></i></label>
                        <input type="password" name="password" id="password" placeholder="Пароль" />
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signin" id="signin" class="form-submit" value="Войти" />
                    </div>
                </form>
            </div>
    </center>
</body>
